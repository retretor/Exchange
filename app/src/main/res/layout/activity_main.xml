<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/calculate_layout"
            app:layout_constraintTop_toTopOf="@+id/calculate_layout"
            android:id="@+id/rates_layout">

        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_list_sec"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.388"
                tools:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/nav_bar_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/calculate_layout">

        <TextView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:text="@string/usd"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/currency_2"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="150dp" />

        <Button
                android:text="@string/convert_btn"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:id="@+id/convert_btn"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                app:layout_constraintTop_toBottomOf="@+id/currency_1_value"
                app:layout_constraintBottom_toTopOf="@+id/currency_2_value"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cost"
                app:layout_constraintVertical_bias="0.506" />

        <EditText
                android:labelFor="@+id/currency_1_value"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/currency_1_value"
                android:layout_alignParentEnd="true"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,DuplicateSpeakableTextCheck"
                android:text="@string/input_value_currency"
                android:layout_alignParentBottom="true"
                app:layout_constraintEnd_toEndOf="@+id/convert_btn"
                app:layout_constraintTop_toTopOf="@+id/currency_1"
                app:layout_constraintBottom_toBottomOf="@+id/currency_1"
                android:importantForAutofill="no"
                app:layout_constraintStart_toStartOf="@+id/convert_btn" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/currency_2_value"
                android:layout_alignParentEnd="true"
                android:text="@string/output_value_currency"
                android:layout_alignParentBottom="true"
                app:layout_constraintBottom_toBottomOf="@+id/currency_2"
                app:layout_constraintTop_toTopOf="@+id/currency_2"
                app:layout_constraintEnd_toEndOf="@+id/convert_btn"
                app:layout_constraintStart_toStartOf="@+id/convert_btn" />

        <TextView
                android:text="@string/cost"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:id="@+id/cost"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                app:layout_constraintTop_toBottomOf="@+id/currency_1"
                app:layout_constraintBottom_toTopOf="@+id/currency_2"
                app:layout_constraintVertical_bias="0.506"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp" />

        <TextView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:text="@string/uah"
                android:id="@+id/currency_1"
                android:layout_above="@+id/currency_2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="150dp"
                android:includeFontPadding="false" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/nav_bar_layout">

        <Space
                android:layout_width="10dp"
                android:layout_height="49dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/space"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <Button
                android:text="@string/rates_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/rates_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/space"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <Button
                android:text="@string/calculate_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/calculate_btn"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="10dp"
                app:layout_constraintStart_toEndOf="@+id/space"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>